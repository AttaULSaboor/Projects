            </div>
            <div class="form-group">
                <label asp-for="Kilometeres" class="control-label"></label>
                <input asp-for="Kilometeres" class="form-control" />
                <span asp-validation-for="Kilometeres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
